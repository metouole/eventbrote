<h1>{{ events | length }} Events</h1>

{% if events is not empty %}

<ul>
	{% for event in events %}
		<article>
			<h2>{{ event.getName }}</h2>
			<p>{{ event.description }}</p>
			<ul>
				<li>Lieu: {{ event.location }}</li>
				<li> Price: $ {{ event.getPrice }}</li>
				<li>Date: {{ event.startsAt|date('F d, Y \a\t h:i A') }}</li>
			</ul>
		</article>
			
	{% endfor %}
</ul>

{% endif %}
